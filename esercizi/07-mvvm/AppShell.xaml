<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EsercizioMVVM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:EsercizioMVVM.Pages"
    Shell.FlyoutBehavior="Locked"
    Shell.FlyoutWidth="200">

    <ShellContent
        Title="Inserisci dati"
        ContentTemplate="{DataTemplate pages:InsertData}"
        Route="InsertData" />

    <ShellContent
        Title="Mostra dati"
        ContentTemplate="{DataTemplate pages:ShowData}"
        Route="ShowData" />

</Shell>
