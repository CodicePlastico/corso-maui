<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EsercizioBinding.Pages.ValueToVisibility">
    
    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

        <Label Text="Metti in binding la proprietà IsVisible della Label con la proprietà Value dello Slider, in modo che la Label diventi visibile se il Value scende sotto la soglia di 20. Suggerimento: ti servirà un Converter." />

        <Slider Minimum="0" Maximum="100" Value="50" />
        <Label TextColor="Red" IsVisible="True">Il valore è sotto la soglia di sicurezza</Label>

        </VerticalStackLayout>

</ContentPage>
