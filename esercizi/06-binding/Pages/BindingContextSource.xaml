<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:EsercizioBinding.Pages"
             x:Class="EsercizioBinding.Pages.BindingContextSource">

    <ContentPage.BindingContext>
        <pages:BindingContextViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
        BindingContext="{Binding Fotocellula}">

        <Label Text="Questa pagina ha un BindingContext associato: è un'istanza della classe BindingContextViewModel. Metti in binding la proprietà Text della Label con la proprietà Counter del BindingContextViewModel. Suggerimento: nel binding non sarà necessario indicare alcuna Source." />

        <Label Text="{Binding Counter}" FontSize="30" HorizontalTextAlignment="Center" />

    </VerticalStackLayout>

</ContentPage>
