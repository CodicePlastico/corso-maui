<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EsercizioBinding.Pages.MultiBinding">
    
    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

        <Label Text="Metti in binding la proprietà Text della Label con le proprietà Minimum, Maximum e Value dello Slider, in modo che la label visualizzi la percentuale di avanzamento dello Slider." />
        
        <Label Text="25%" FontSize="30" HorizontalTextAlignment="Center" />
        <Slider Minimum="-20" Maximum="60" Value="0" />

    </VerticalStackLayout>

</ContentPage>
