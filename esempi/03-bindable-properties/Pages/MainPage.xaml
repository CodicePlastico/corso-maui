<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:BindableProperties.Pages"
             x:Class="BindableProperties.Pages.MainPage">

    <VerticalStackLayout>
        <pages:LabelContentView Text="{Binding Value, Source={Reference MySlider}, StringFormat='{0:0}'}" />

        <Slider x:Name="MySlider" Minimum="0" Maximum="100" Value="20" />
    </VerticalStackLayout>

</ContentPage>
