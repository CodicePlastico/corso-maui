<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiShowcase.Pages.Layouts.Grid">
    <ContentView.Resources>
        <Style TargetType="Label">
            <Setter Property="Text" Value="View" />
            <Setter Property="Background" Value="LightGray" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="Padding" Value="10" />
        </Style>
    </ContentView.Resources>
    <Grid RowDefinitions="2*,2*,2*,3*" ColumnDefinitions="2*,3*,2*" ColumnSpacing="10" RowSpacing="10" WidthRequest="500" HorizontalOptions="Start" Margin="0,10">
        <Label Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" />
        <Label Grid.Row="0" Grid.Column="1" />
        <Label Grid.Row="1" Grid.Column="1" />
        <Label Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" />
        <Label Grid.Row="3" Grid.Column="1" />
        <Label Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" />
        <Label Grid.Row="3" Grid.Column="2" />
    </Grid>
</ContentView>
