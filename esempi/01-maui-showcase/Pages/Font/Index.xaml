                <Label Text="The quick brown fox jumped over the lazy dog" FontSize="31" FontFamily="Gill Sans MT" />
                <Label Text="The quick brown fox jumped over the lazy dog" FontSize="21" FontFamily="GothicE" />
                <Label Text="&#xeb54;&#xeec1;&#xeaa4;&#xeaad;&#xeb62;&#xeb0d;&#xeb1b;&#xea7a;&#xea6f;&#xeac1;&#xef68;&#xeb56;&#xeb57;&#xeeff;&#xebc5;" FontSize="40" FontFamily="TablerIcons" />
